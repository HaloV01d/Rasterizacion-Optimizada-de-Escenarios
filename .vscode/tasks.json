{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (MinGW, dynamic)",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}/main.cpp",
        "-o", "${workspaceFolder}/build/main.exe",
        "-I", "C:\\msys64\\mingw64\\include",
        "-L", "C:\\msys64\\mingw64\\lib",
        "-lglew32",
        "-lfreeglut",
        "-lopengl32",
        "-lglu32",
        "-lgdi32",
        "-lwinmm"
